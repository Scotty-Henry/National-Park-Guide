@model SurveyFavorites

@section Title{
    Fav
}

@{ 
    SurveyViewModel svm = Model.Survey;
}
<partial name="_Survey"model="svm"/>
<div class="row">
    <div class="col-sm-10">

    </div>
    <div class="col-sm-2 text-center">
    </div>
</div>
@foreach (FavoriteViewModel fav in Model.Favorites)
{
    <div class="row" style="padding-bottom:3%">
        <div class="col-sm-4">
            <a asp-controller="Home" asp-action="Detail" asp-route-parkCode="@fav.ParkCode" class="col-md-12"><img src="~/img/parks/@(fav.ParkCode.ToLower()).jpg" class="col-md-12 img-thumbnail" style="padding:3px;" /></a>
        </div>
        <div class="col-sm-6">
            <div class="park-name">
                <h2 style="margin:0px">
                    @fav.ParkName
                </h2>
                <br>
            </div>
            <div class="park-desc">
                @fav.ParkDesc
            </div>
        </div>
        <div>
            <div class="col-sm-2 text-center">Surveys completed <br />@fav.SurveyCount</div>
        </div>
    </div>
    }
